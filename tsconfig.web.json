{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/preload/*.d.ts",
    "src/renderer/src/**/*.tsx",
     "src/shared/**/*"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "jsx": "react-jsx",
  }
}
